    <!-- This file will launch all the necessary nodes, it is the main launch file-->
<launch>
    <!-- Launch mapping and sensor fusion localization-->
    <include file="$(find exploration_mapping)/launch/mapping_and_localization.launch"/>

    <!-- Launch perception-->
    <!--include file="$(find exploration_perception)/launch/perception.launch"/-->

    <!-- Launch move_base-->
    <!--include file="$(find exploration_navigation)/launch/move_base_launch.launch"/-->

    <!-- Launch frontier exploration-->
    <include file="$(find exploration_main)/launch/exploration.launch"/>

    <!-- Launch rviz config file -->
    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find exploration_main)/rviz/final.rviz"/>

    <!-- Launch main node -->
    <arg name="map_file_name" default="map"/>
    <node pkg="exploration_main" type="exploration_main.py" name="main_node" output="screen">
        <param name="map_name" value="$(arg map_file_name)" type="str"/>
    </node>

</launch>